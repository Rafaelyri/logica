programa
{
	inteiro vet[3], num, pos
	
	funcao inicio()
	{
	//criar um vetor e preencher
	para(inteiro i = 0; i < 3; i++){
		escreva("Entre com um valor:: ")
		leia(vet[i])
	}
	//entrar com valor a pesquisar
	escreva("Digite um número para pesquisa: ")
	leia(num)
	pos = 0

	//pesquisar no vetor
	enquanto((pos < 2) e (vet[pos] != num)){
		pos = pos + 1
	}
	se(vet[pos] == num){
		escreva("Número encontrado na posição " + pos)
		
	}
	senao{
		escreva("Número não encontrado no vetor ")
	}
	
	}
}
